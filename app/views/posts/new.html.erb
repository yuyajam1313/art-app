<div class='post-page'>
 <div class='post-input'>
  <%= form_with(model: @post, local: true) do |f| %>
    <div class="field">
      <%= f.label :image, "作品画像" %><br />
      <%= f.file_field :image, id:"post-image" %>
    </div>

    <div class="field">
      <%= f.label :visual_reading, "視覚で感じること" %><br />
      <%= f.text_area :visual_reading, class: :form__text %>
    </div>

    <div class="field">
      <%= f.label :question, "自ら作った問い" %><br />
      <%= f.text_area :question, class: :form__text %>
    </div>

    <div class="field">
      <%= f.label :answer, "自分なりの答え" %><br />
      <%= f.text_area :answer, class: :form__text %>
    </div>

    <div class="actions">
      <%= f.submit "投稿", class: :form__btn  %>
    </div>
  <% end %>
 </div>
</div>